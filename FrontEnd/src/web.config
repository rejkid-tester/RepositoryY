<?xml version="1.0" encoding="UTF-8"?>
<configuration>
  <system.webServer>
  <security>
    <requestFiltering allowDoubleEscaping="true" />
  </security>
    <rewrite>
      <rules>
        <!-- 1) If you expose an API under /api, forward to the backend app mounted at /WebApi -->
        <!--rule name="Rewrite /api to /WebApi" stopProcessing="true">
          <match url="^api(.*)" ignoreCase="true" />
          <action type="Rewrite" url="/WebApi{R:1}" appendQueryString="true" />
        </rule-->

        <!-- 2) Redirect legacy server-sent link to SPA reset route so the client handles the token -->
        <!--rule name="Redirect users/forgot-password to SPA reset" stopProcessing="true">
          <match url="^users/forgot-password$" ignoreCase="true" />
          <action type="Redirect" url="/reset-password" appendQueryString="true" redirectType="Found" />
        </rule-->

        <!-- 3) SPA fallback: serve index.html for non-file, non-directory, non-API requests -->
        <rule name="SPA rewrite to index.html" stopProcessing="true">
          <match url="(.*)" />
          <conditions logicalGrouping="MatchAll">
            <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="true" />
            <add input="{REQUEST_FILENAME}" matchType="IsDirectory" negate="true" />
            <add input="{REQUEST_URI}" pattern="^/api" negate="true" />
          </conditions>
          <action type="Rewrite" url="index.html" appendQueryString="true" />
        </rule>
      </rules>
    </rewrite>
  </system.webServer>
</configuration>
  